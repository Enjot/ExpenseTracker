CREATE TABLE category (
  name TEXT NOT NULL PRIMARY KEY UNIQUE,
  isVisible INTEGER NOT NULL DEFAULT 1
);

CREATE INDEX categoryName ON category(name);

selectAll:
SELECT *
FROM category
ORDER BY name;

insert:
INSERT INTO category(name)
VALUES (?);

setHidden:
UPDATE category
SET isVisible = 0
WHERE category.name = ?;

setVisible:
UPDATE category
SET isVisible = 1
WHERE category.name = ?;

alreadyExist:
SELECT EXISTS(
SELECT *
FROM category
WHERE category.name = ?
LIMIT 1
);